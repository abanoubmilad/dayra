<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pic_view"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/def" />

                <EditText
                    android:id="@+id/edit_name"
                    style="@style/attendant_labels"
                    android:hint="@string/label.name.required"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/edit_mobile1"
                    style="@style/attendant_labels"
                    android:hint="@string/label.mobile1"
                    android:inputType="phone"
                    android:maxLength="15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <include layout="@layout/sep" />

                    <TextView
                        style="@style/attendant_labels"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="@string/label.contact" />

                    <include layout="@layout/sep" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_mobile2"
                    style="@style/attendant_labels"
                    android:hint="@string/label.mobile2"
                    android:inputType="phone"
                    android:maxLength="15" />

                <EditText
                    android:id="@+id/edit_mobile3"
                    style="@style/attendant_labels"
                    android:hint="@string/label.mobile3"
                    android:inputType="phone"
                    android:maxLength="15" />

                <EditText
                    android:id="@+id/edit_lphone"
                    style="@style/attendant_labels"
                    android:hint="@string/label.lphone"
                    android:inputType="phone"
                    android:maxLength="15" />

                <EditText
                    android:id="@+id/edit_email"
                    style="@style/attendant_labels"
                    android:hint="@string/label.email"
                    android:inputType="textEmailAddress"
                    android:maxLength="30" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <include layout="@layout/sep" />

                    <TextView
                        style="@style/attendant_labels"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="@string/label.personal" />

                    <include layout="@layout/sep" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/spin_class_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_spin" />

                    <EditText
                        android:id="@+id/edit_class_year"
                        style="@style/attendant_labels"
                        android:hint="@string/label.class.year"
                        android:maxLength="30" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/spin_study_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_spin" />

                    <EditText
                        android:id="@+id/edit_study_work"
                        style="@style/attendant_labels"
                        android:hint="@string/label.study.work"
                        android:maxLength="30" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/pick_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/midgrey"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/attendant_labels"
                        android:layout_gravity="center"
                        android:text="@string/label.bday" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_date" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_larger" />


                </LinearLayout>

                <EditText
                    android:id="@+id/edit_comm"
                    style="@style/attendant_labels"
                    android:hint="@string/label.notes"
                    android:inputType="textMultiLine" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/spin_priest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_spin" />

                    <EditText
                        android:id="@+id/edit_priest"
                        style="@style/attendant_labels"
                        android:hint="@string/label.supervisor"
                        android:maxLength="30" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <include layout="@layout/sep" />

                    <TextView
                        style="@style/attendant_labels"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="@string/label.address" />

                    <include layout="@layout/sep" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/spin_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_spin" />

                    <EditText
                        android:id="@+id/edit_site"
                        style="@style/attendant_labels"
                        android:hint="@string/label.site"
                        android:maxLength="30" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/spin_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_spin" />

                    <EditText
                        android:id="@+id/edit_street"
                        style="@style/attendant_labels"
                        android:hint="@string/label.street"
                        android:maxLength="30" />


                </LinearLayout>

                <EditText
                    android:id="@+id/edit_address"
                    style="@style/attendant_labels"
                    android:hint="@string/label.address"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/editor_footer" />

    </LinearLayout>


</ScrollView>