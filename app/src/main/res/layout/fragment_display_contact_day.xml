<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.progress" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <TextView
            style="@style/attendant_labels"
            android:text="@string/label.last.attendance" />

        <TextView
            android:id="@+id/dis_last_attend"
            style="@style/attendant_labels"
            android:hint="@string/label.last.attendance" />

        <TextView
            android:id="@+id/btn_dates"
            style="@style/bottom_button"
            android:background="@color/lightgreen"
            android:text="@string/label.attendance.dates" />

        <TextView
            style="@style/attendant_labels"
            android:text="@string/label.last.visit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_lvisit"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/label.last.visit" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/dayList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <ListView
            android:id="@+id/monthList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <ListView
            android:id="@+id/yearList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
</LinearLayout>
    </LinearLayout>

</ScrollView>