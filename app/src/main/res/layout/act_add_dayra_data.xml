<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/label.update.express"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label.choose.data"
                android:textSize="@dimen/font_large" />

            <CheckBox
                android:id="@+id/selectall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label.selectall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/mobile1"
                    style="@style/check_box"
                    android:checked="true"
                    android:text="@string/label.mobile1" />

                <CheckBox
                    android:id="@+id/mobile2"
                    style="@style/check_box"
                    android:text="@string/label.mobile2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/classyear"
                    style="@style/check_box"
                    android:text="@string/label.class.year" />

                <CheckBox
                    android:id="@+id/mobile3"
                    style="@style/check_box"
                    android:text="@string/label.mobile3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/study_work"
                    style="@style/check_box"
                    android:text="@string/label.study.work" />

                <CheckBox
                    android:id="@+id/lphone"
                    style="@style/check_box"
                    android:text="@string/label.lphone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/email"
                    style="@style/check_box"
                    android:text="@string/label.email" />

                <CheckBox
                    android:id="@+id/comm"
                    style="@style/check_box"
                    android:text="@string/label.notes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/site"
                    style="@style/check_box"
                    android:text="@string/label.site" />

                <CheckBox
                    android:id="@+id/bday"
                    style="@style/check_box"
                    android:text="@string/label.bday" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/street"
                    style="@style/check_box"
                    android:text="@string/label.street" />

                <CheckBox
                    android:id="@+id/supervisor"
                    style="@style/check_box"
                    android:text="@string/label.supervisor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/addr"
                    style="@style/check_box"
                    android:text="@string/label.address" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/btn.browse.dayra"
        android:textSize="@dimen/font_larger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_file"
            style="@style/bottom_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label.dayra.file" />

        <TextView
            android:id="@+id/btn_xls"
            style="@style/bottom_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label.dayra.xls" />
    </LinearLayout>


</LinearLayout>