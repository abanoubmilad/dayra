<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/pic_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/dis_name"
            style="@style/attendant_labels"
            android:gravity="center"
            android:hint="@string/label.name.required"
            android:maxLength="30"
            android:textSize="@dimen/font_larger">

            <requestFocus />
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_mobile1"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.mobile1"
                android:inputType="phone"
                android:maxLength="15" />

            <include
                android:id="@+id/msg_btn1"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn1"
                layout="@layout/call_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.personal" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <TextView
            android:id="@+id/dis_class_year"
            style="@style/attendant_labels"
            android:hint="@string/label.class.year" />

        <TextView
            android:id="@+id/dis_study_work"
            style="@style/attendant_labels"
            android:layout_width="match_parent"
            android:hint="@string/label.study.work"
            android:maxLength="30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_bday"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/label.bday" />
        </LinearLayout>

        <TextView
            android:id="@+id/dis_comm"
            style="@style/attendant_labels"
            android:hint="@string/label.notes" />

        <TextView
            android:id="@+id/btn_connections"
            style="@style/bottom_button"
            android:background="@color/lightgreen"
            android:text="@string/subhead.display.connections" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.progress" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <TextView
            style="@style/attendant_labels"
            android:text="@string/label.last.attendance" />

        <TextView
            android:id="@+id/dis_last_attend"
            style="@style/attendant_labels"
            android:hint="@string/label.last.attendance" />

        <TextView
            android:id="@+id/btn_dates"
            style="@style/bottom_button"
            android:background="@color/lightgreen"
            android:text="@string/label.attendance.dates" />

        <TextView
            style="@style/attendant_labels"
            android:text="@string/label.last.visit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_lvisit"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/label.last.visit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_priest"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.conf.father"
                android:maxLength="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.contact" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_mobile2"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.mobile2" />

            <include
                android:id="@+id/msg_btn2"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn2"
                layout="@layout/call_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_mobile3"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.mobile3" />

            <include
                android:id="@+id/msg_btn3"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn3"
                layout="@layout/call_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_lphone"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.lphone" />

            <include
                android:id="@+id/call_btn4"
                layout="@layout/call_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/dis_email"
            style="@style/attendant_labels"
            android:hint="@string/label.email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.address" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_site"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.site"
                android:maxLength="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_street"
                style="@style/attendant_labels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/label.street"
                android:maxLength="30" />
        </LinearLayout>

        <TextView
            android:id="@+id/dis_address"
            style="@style/attendant_labels"
            android:hint="@string/label.address" />

        <TextView
            android:id="@+id/map_btn"
            style="@style/bottom_button"
            android:background="@color/green"
            android:text="@string/btn.map.display" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="20dp"
                    android:src="@mipmap/ic_back" />
            </LinearLayout>

            <TextView
                android:id="@+id/edit"
                style="@style/couple_button"
                android:background="@color/red"
                android:text="@string/btn.edit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>