<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/dis_name"
            style="@style/attendant_labels"
            android:layout_gravity="center"
            android:textSize="@dimen/font_larger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <include
                android:id="@+id/msg_btn1"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn1"
                layout="@layout/call_button" />

            <TextView
                android:id="@+id/dis_mobile1"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.mobile1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.personal" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_class_year"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.class.year" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_study_work"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.study.work" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_bday"
                style="@style/attendant_labels"
                android:layout_width="wrap_content" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.bday" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_comm"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.notes" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_priest"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.supervisor" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.contact" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <include
                android:id="@+id/msg_btn2"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn2"
                layout="@layout/call_button" />

            <TextView
                android:id="@+id/dis_mobile2"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.mobile2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">


            <include
                android:id="@+id/msg_btn3"
                layout="@layout/msg_button" />

            <include
                android:id="@+id/call_btn3"
                layout="@layout/call_button" />

            <TextView
                android:id="@+id/dis_mobile3"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.mobile3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">


            <include
                android:id="@+id/call_btn4"
                layout="@layout/call_button" />

            <TextView
                android:id="@+id/dis_lphone"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.lphone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_email"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.email" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <include layout="@layout/sep" />

            <TextView
                style="@style/attendant_labels"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/label.address" />

            <include layout="@layout/sep" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_site"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.site" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_street"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.street" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dis_address"
                style="@style/attendant_labels" />

            <TextView
                style="@style/attendant_labels"
                android:hint="@string/label.address" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>