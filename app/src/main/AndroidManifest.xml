        <activity android:name=".opr.CopyPhoneDayra"></activity>
        <activity
            android:name=".opr.EditContact"
            android:label="@string/subhead.edit.contact"></activity>

        <receiver android:name=".alarm.AttendReceiver" />
        <receiver android:name=".alarm.BDayReceiver" />
        <receiver android:name=".alarm.VisitReceiver" />
