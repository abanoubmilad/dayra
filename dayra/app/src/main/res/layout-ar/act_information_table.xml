<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/label.choose.data"
                    android:textSize="@dimen/font_larger" />

                <CheckBox
                    android:id="@+id/numbering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/label.numbering" />

                <CheckBox
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/label.name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/mobile1"
                        style="@style/check_box_rtl"
                        android:text="@string/label.mobile1" />

                    <CheckBox
                        android:id="@+id/mobile2"
                        style="@style/check_box_rtl"
                        android:text="@string/label.mobile2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/classyear"
                        style="@style/check_box_rtl"
                        android:text="@string/label.class.year" />

                    <CheckBox
                        android:id="@+id/mobile3"
                        style="@style/check_box_rtl"
                        android:text="@string/label.mobile3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/study_work"
                        style="@style/check_box_rtl"
                        android:text="@string/label.study.work" />

                    <CheckBox
                        android:id="@+id/lphone"
                        style="@style/check_box_rtl"
                        android:text="@string/label.lphone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/site"
                        style="@style/check_box_rtl"
                        android:text="@string/label.site" />

                    <CheckBox
                        android:id="@+id/email"
                        style="@style/check_box_rtl"
                        android:text="@string/label.email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/street"
                        style="@style/check_box_rtl"
                        android:text="@string/label.street" />

                    <CheckBox
                        android:id="@+id/notes"
                        style="@style/check_box_rtl"
                        android:text="@string/label.notes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/home"
                        style="@style/check_box_rtl"
                        android:text="@string/label.home" />


                    <CheckBox
                        android:id="@+id/bday"
                        style="@style/check_box_rtl"
                        android:text="@string/label.bday" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/addr"
                        style="@style/check_box_rtl"
                        android:text="@string/label.address" />

                    <CheckBox
                        android:id="@+id/supervisor"
                        style="@style/check_box_rtl"
                        android:text="@string/label.supervisor" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn"
            style="@style/floating_action_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:src="@mipmap/ic_btn_download" />
    </RelativeLayout>

</LinearLayout>