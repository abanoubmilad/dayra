<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/header_menu" />


        <LinearLayout
            android:id="@+id/container_actions"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/btn_backup"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:orientation="horizontal"

                android:padding="10dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_file"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.import.backup"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_large" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_create"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_create"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.create.dayra"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_large" />


            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/container_dayras"
        android:background="@color/lightgrey"

        android:padding="10dp"

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_enter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label.select.dayra"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large" />


        <ListView
            android:id="@+id/home_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
</LinearLayout>

        <include layout="@layout/footer" />
    </LinearLayout>

    <include layout="@layout/fragment_menu" />


</android.support.v4.widget.DrawerLayout>