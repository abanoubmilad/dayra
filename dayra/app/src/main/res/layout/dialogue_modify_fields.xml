<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv0"
                style="@style/label"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/t0"
                style="@style/field_input"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv1"
                style="@style/label"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/t1"
                style="@style/field_input"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv2"
                style="@style/label"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/t2"
                style="@style/field_input"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv3"
                style="@style/label"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/t3"
                style="@style/field_input"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv4"
                style="@style/label"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/t4"
                style="@style/field_input"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />
        </LinearLayout>

        <TextView
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/btn.confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_largest" />

    </LinearLayout>
</ScrollView>